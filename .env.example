# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Storage Encryption (Optional)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# If not set, a new key will be generated on each container restart (data won't persist)

# PRAXIS_MASTER_KEY=your-generated-fernet-key-here

# Agent Configuration
PRAXIS_ENVIRONMENT=development
PRAXIS_DEBUG=true

# P2P Configuration (optional overrides)
# PRAXIS_P2P__PORT=9000
# PRAXIS_P2P__MDNS_SERVICE=praxis-p2p-mcp

# MCP Configuration (optional overrides)
# PRAXIS_MCP__PORT=3001
# PRAXIS_MCP__FILESYSTEM_ROOT=/shared

# API Configuration (optional overrides)
# PRAXIS_API__PORT=8080
# PRAXIS_API__HOST=0.0.0.0

# Logging Configuration (optional overrides)
# PRAXIS_LOGGING__LEVEL=DEBUG
# PRAXIS_LOGGING__FILE_ENABLED=true

# Metrics Configuration
# Enable/disable metrics collection and pushing
PRAXIS_METRICS__ENABLED=true

# Metrics push interval in seconds
PRAXIS_METRICS__PUSH_INTERVAL=15

# Remote Prometheus endpoint for metrics
PRAXIS_METRICS__REMOTE_WRITE_URL=https://monitoring.prxs.ai/prometheus/api/v1/write

# Job name for Prometheus metrics (used as label)
PRAXIS_METRICS__JOB_NAME=praxis-agent

# Optional: Additional custom labels for all metrics (JSON format)
# PRAXIS_METRICS__ADDITIONAL_LABELS={"region":"us-east-1","cluster":"dev"}
